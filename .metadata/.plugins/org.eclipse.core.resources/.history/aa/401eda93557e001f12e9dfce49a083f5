package ex6_4;

import java.util.Scanner;

public class DisplayTriangle {
    public static void main(String[] args) {
        String[] Month_31 = {"January", "Jan.", "Jan", "1", 
                             "March", "Mar.", "Mar", "3",
                             "May", "5",
                             "July", "Jul", "7",
                             "August", "Aug.", "Aug", "8",
                             "October", "Oct.", "Oct", "10",
                             "December", "Dec.", "Dec", "12"};
        String[] Month_30 = {"April", "Apr.", "Apr", "4",
                             "June", "Jun", "6",
                             "September", "Sept.", "Sep", "9",
                             "November", "Nov.", "Nov", "11"};
        String[] Month_2 = {"February", "Feb.", "Feb", "2"};
        
        Scanner scanner = new Scanner(System.in);  // Use a single Scanner object for all input

        while (true) {
            int iYear;
            while (true) {
                System.out.print("Year: ");
                iYear = scanner.nextInt();
                if (iYear >= 0) {
                    break;
                } else {
                    System.out.println("Invalid year! Please enter a positive number.");
                }
            }

            System.out.print("Enter month: ");
            scanner.nextLine();  // Consume the newline left from nextInt()
            String strMonth = scanner.nextLine();

            // Check if the month is one of the months with 31 days
            for (String s : Month_31) {
                if (s.equals(strMonth)) {
                    System.out.println("Month " + s + " Year " + iYear + " has 31 days.");
                    scanner.close();
                    return;
                }
            }

            // Check if the month is one of the months with 30 days
            for (String s : Month_30) {
                if (s.equals(strMonth)) {
                    System.out.println("Month " + s + " Year " + iYear + " has 30 days.");
                    scanner.close();
                    return;
                }
            }

            // Check for February and determine leap year
            for (String s : Month_2) {
                if (s.equals(strMonth)) {
                    if ((iYear % 4 == 0 && iYear % 100 != 0) || iYear % 400 == 0) {
                        System.out.println("Month " + s + " Year " + iYear + " has 29 days (Leap Year).");
                    } else {
                        System.out.println("Month " + s + " Year " + iYear + " has 28 days.");
                    }
                    scanner.close();
                    return;
                }
            }

            // If the input is not valid, prompt the user to try again
            System.out.println("Invalid month or year! Please try again.\n");
        }
    }
}
